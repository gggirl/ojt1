<h1>Listing room_messages</h1>

<table>
  <tr>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @room_messages.each do |room_message| %>
  <tr>
    <td><%= room_message.message %></td>
    <td><%= link_to 'Show', room_message %></td>
    <td><%= link_to 'Edit', edit_room_message_path(room_message) %></td>
    <td><%= link_to 'Destroy', room_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Room message', new_room_message_path %>
<%= form_for(@room_message) do |f| %>f.
<div class="field">
   
    <%= f.text_field :message %>
  </div>
  <div class="actions">
    <%= f.submit value="Send" %>
  </div>
<% end %>