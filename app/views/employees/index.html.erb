<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <!--<th><%= model_class.human_attribute_name(:userid) %></th>-->
      <th><%= model_class.human_attribute_name(:username) %></th>
      <!--<th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:password) %></th>
      <th><%= model_class.human_attribute_name(:password_confirmation) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:birthday) %></th>
      <th><%= model_class.human_attribute_name(:NRCNo) %></th>
      <th><%= model_class.human_attribute_name(:Gender) %></th>
      <th><%= model_class.human_attribute_name(:specialize) %></th>
      <th><%= model_class.human_attribute_name(:phno) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:travelfee) %></th>
     
      <th><%= model_class.human_attribute_name(:entrydate) %></th>-->
      <th><%= t '.action', :default => t("helpers.actions") %></th>
      
      
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <!--<td><%= employee.userid %></td>-->
        <td><%= employee.username %></td>
        <!--<td><%= employee.email %></td>
        <td><%= employee.password %></td>
        <td><%= employee.password_confirmation %></td>
        <td><%= employee.age %></td>
        <td><%= employee.birthday %></td>
        <td><%= employee.NRCNo %></td>
        <td><%= employee.Gender %></td>
        <td><%= employee.specialize %></td>
        <td><%= employee.phno %></td>
        <td><%= employee.address %></td>
        <td><%= employee.travelfee %></td>
        
        <td><%= employee.entrydate %></td>-->
       
        
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      employee, :class => 'btn btn-mini' %>  
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_employee_path(employee), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      employee_path(employee),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>

<%= will_paginate @employees %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
<%= link_to t('.csv', :default => t("helpers.links.csv")), employees_path(format: "csv"), :class => 'btn btn-primary' %>





